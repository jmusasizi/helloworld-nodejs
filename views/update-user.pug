doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Edit User Page
    Link(rel="stylesheet" href="/css/forms.css")     
  body
    h2 Edit User Details
    form(action="/update-user-page?id"+user._id method="POST")
      input(type="text" name="username" placeholder="Your Name" value=user.username)
      input(type="email" name="email" placeholder="Email Address" value=user.email disabled)
      select(name="role")
        option(value="manager" selected = user.role === "manager") Manager
        option(value="sales-agent" selected = user.role === "sales-agent") Sales Agent
      select(name="branch")
        option(value="maganjo" selected = user.branch === "maganjo") Maganjo
        option(value="matuga" selected = user.branch === "matuga") Matuga        
      input(type="submit" value="Save Changes")
    a(href="/all-users-page") Go Back To All Users Page

